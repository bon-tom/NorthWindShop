<?xml version="1.0" encoding="utf-8"?>
<?data-format version="0.400"?>
<Form>
  <Name value="checkout" />
  <Caption value="Checkout" />
  <Content>
    <Panel>
      <Name value="panel1" />
      <Orientation value="Vertical" />
      <Panel.Height value="#" />
      <Panel.Width value="*" />
      <Children>
        <GroupBox>
          <Name value="groupBox1" />
          <Panel.Height value="#" />
          <Panel.Width value="*" />
          <Content>
            <Panel>
              <Name value="panel4" />
              <Orientation value="Vertical" />
              <Children>
                <Panel>
                  <Name value="repeater1_parent_parent" />
                  <Orientation value="Horizontal" />
                  <Panel.Height value="#" />
                  <Panel.Width value="*" />
                  <Children>
                    <Label>
                      <Name value="label5" />
                      <Data value="Product" />
                      <Panel.Height value="#" />
                      <Panel.Width value="40%" />
                      <CssClass>
                        <CssClassConditional>
                          <ClassName value="{theme}-label" />
                          <IsThemedStyle value="True" />
                        </CssClassConditional>
                      </CssClass>
                    </Label>
                    <Label>
                      <Name value="label6" />
                      <Data value="Unit price" />
                      <Panel.Height value="#" />
                      <Panel.Width value="20%" />
                      <CssClass>
                        <CssClassConditional>
                          <ClassName value="{theme}-label" />
                          <IsThemedStyle value="True" />
                        </CssClassConditional>
                      </CssClass>
                    </Label>
                  </Children>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-panel" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </Panel>
                <Repeater>
                  <Name value="repeater1" />
                  <Panel.Height value="#" />
                  <Panel.Width value="*" />
                  <Content>
                    <Panel>
                      <Name value="panel7" />
                      <Orientation value="Horizontal" />
                      <Children>
                        <Label>
                          <Name value="label1" />
                          <Panel.Height value="#" />
                          <Panel.Width value="40%" />
                          <Bindings>
                            <Binding SourceProperty="Data" Expression="ProductName" />
                          </Bindings>
                          <CssClass>
                            <CssClassConditional>
                              <ClassName value="{theme}-label" />
                              <IsThemedStyle value="True" />
                            </CssClassConditional>
                          </CssClass>
                        </Label>
                        <Label>
                          <Name value="label2" />
                          <Panel.Height value="#" />
                          <Panel.Width value="20%" />
                          <Bindings>
                            <Binding SourceProperty="Data" Expression="UnitPrice" />
                          </Bindings>
                          <CssClass>
                            <CssClassConditional>
                              <ClassName value="{theme}-label" />
                              <IsThemedStyle value="True" />
                            </CssClassConditional>
                          </CssClass>
                        </Label>
                        <Label>
                          <Name value="label3" />
                          <Panel.Height value="#" />
                          <Panel.Width value="20%" />
                          <Bindings>
                            <Binding SourceProperty="Data" Expression="Amount" />
                          </Bindings>
                          <CssClass>
                            <CssClassConditional>
                              <ClassName value="{theme}-label" />
                              <IsThemedStyle value="True" />
                            </CssClassConditional>
                          </CssClass>
                        </Label>
                        <Label>
                          <Name value="label4" />
                          <Panel.Height value="#" />
                          <Panel.Width value="20%" />
                          <Bindings>
                            <Binding SourceProperty="Data" Expression="TotalPrice" />
                          </Bindings>
                          <CssClass>
                            <CssClassConditional>
                              <ClassName value="{theme}-label" />
                              <IsThemedStyle value="True" />
                            </CssClassConditional>
                          </CssClass>
                        </Label>
                      </Children>
                      <CssClass>
                        <CssClassConditional>
                          <ClassName value="{theme}-panel" />
                          <IsThemedStyle value="True" />
                        </CssClassConditional>
                      </CssClass>
                    </Panel>
                  </Content>
                  <Bindings>
                    <Binding SourceProperty="DataItems" Expression="basket" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-repeater" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </Repeater>
                <Label>
                  <Name value="label7" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="form.totalPriceTitle" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-label" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </Label>
                <Label>
                  <Name value="label8" />
                  <Panel.Height value="#" />
                  <Panel.Width value="300px" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="shipping" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-label" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </Label>
              </Children>
              <CssClass>
                <CssClassConditional>
                  <ClassName value="{theme}-panel" />
                  <IsThemedStyle value="True" />
                </CssClassConditional>
              </CssClass>
            </Panel>
          </Content>
          <Bindings>
            <Binding SourceProperty="Caption" Expression="basket.caption()" />
          </Bindings>
          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-groupbox" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </GroupBox>
      </Children>
      <CssClass>
        <CssClassConditional>
          <ClassName value="{theme}-panel" />
          <IsThemedStyle value="True" />
        </CssClassConditional>
      </CssClass>
    </Panel>
  </Content>
  <DataContext>
    <DataContext>
      <Children>
        <Attribute>
          <Name value="basketAsJson" />
          <Caption value="Basket as json" />
          <DataContextParameter.IsInput value="True" />
          <DataContextParameter.IsInputRequired value="True" />
          <DeclaredType>
            <AttributeType />
          </DeclaredType>
        </Attribute>
        <Collection>
          <Name value="basket" />
          <Caption value="Basket" />
          <Children>
            <Include>
              <Include reference="+DataEntities.product" />
            </Include>
            <Computed>
              <Name value="TotalPrice" />
              <Caption value="Total price" />
              <Expression IsValid="True">
                <ExpressionText><![CDATA[round(Amount * UnitPrice, 2)]]></ExpressionText>
                <ResultType>
                  <BaseType value="Decimal" />
                </ResultType>
              </Expression>
            </Computed>
          </Children>
        </Collection>
        <Computed>
          <Name value="totalPriceTitle" />
          <Caption value="Total price title" />
          <Expression IsValid="True">
            <ExpressionText><![CDATA["Total price: " + tostring(form.totalPrice)]]></ExpressionText>
            <ResultType>
              <BaseType value="String" />
            </ResultType>
          </Expression>
        </Computed>
        <Computed>
          <Name value="shipping" />
          <Caption value="Shipping" />
          <Expression IsValid="True">
            <ExpressionText><![CDATA["Shipping: " + tostring(form.totalPrice > 1000 ? 0 : 100)]]></ExpressionText>
            <ResultType>
              <BaseType value="String" />
            </ResultType>
          </Expression>
        </Computed>
        <Computed>
          <Name value="totalPrice" />
          <Caption value="Total price" />
          <Expression IsValid="True">
            <ExpressionText><![CDATA[form.basket.sum(current.TotalPrice)]]></ExpressionText>
            <ResultType>
              <BaseType value="Decimal" />
            </ResultType>
          </Expression>
        </Computed>
      </Children>
    </DataContext>
  </DataContext>
  <OnCreate>
    <ActionEvent ReferencedAction="~init" />
  </OnCreate>
  <Actions>
    <ActionBlock>
      <Name value="init" />
      <ActionLangBody IsValid="True">
        <Script><![CDATA[form.basket.fromJson(form.basketAsJson)]]></Script>
      </ActionLangBody>
      <DataContext>
        <ActionDataContext />
      </DataContext>
    </ActionBlock>
  </Actions>
</Form>